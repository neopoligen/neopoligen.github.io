{%- import "includes/macros.jinja" as macros -%}
{%- include "includes/globals.jinja" -%}

<!DOCTYPE html>
<html lang="en">
<head>{% include "includes/head.jinja" -%}</head>
<body>
  <div class="page_wrapper">
    <div class="sidebar_article_group">
      {%- include "includes/sidebar.jinja" -%}
      <article class="flow">
        {{- macros.breadcrumbs(links) -}}
        {{- macros.place_section(page_id, "title") -}}
        {{- macros.place_section(page_id, "forward") -}}
        {{- macros.main_body(page_id) -}}
        {{ macros.prev_next(links) }}
      </article>
    </div>
    {%- include "includes/footer.jinja" -%}
  </div>
</body>
</html>